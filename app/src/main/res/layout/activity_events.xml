<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dota.pearl18.pearlapp2018.activities.EventsActivity">

    <TextView
        android:id="@+id/club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="#000"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/club_prize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/club_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/club_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/club_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Fixed Sun frame, appears beneath the clouds-->
    <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/sun"/>

    <!-- Moving Frames -->
    <!-- First frame, right side -->
    <ImageView
      android:id="@+id/land_right_one"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      android:src="@drawable/ic_land_right"/>

    <ImageView
      android:id="@+id/cloud_right_one"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      android:src="@drawable/ic_clouds_right"/>

    <!-- Second frame, left side-->
    <ImageView
      android:id="@+id/land_left_one"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      android:src="@drawable/ic_land_left"/>

    <ImageView
      android:id="@+id/cloud_left_one"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      android:src="@drawable/ic_clouds_left"/>

    <!-- Third frame, right side-->
    <ImageView
      android:id="@+id/land_right_two"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      android:src="@drawable/ic_land_right"/>

    <ImageView
      android:id="@+id/cloud_right_two"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      android:src="@drawable/ic_clouds_right"/>
    <!-- End of Moving Frames -->

    <!-- Relatively fixed bus frames -->
    <ImageView
      android:id="@+id/layer_bus"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingBottom="4dp"
      android:src="@drawable/bus_full"/>
</android.support.constraint.ConstraintLayout>
