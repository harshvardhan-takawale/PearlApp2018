<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dota.pearl18.pearlapp2018.activities.GuideActivity"
    android:orientation="vertical"
    android:background="#000000">

    <!-- First frame, right side -->
    <ImageView
        android:id="@+id/land_right_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_land_right"/>

    <ImageView
        android:id="@+id/cloud_right_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_clouds_right"/>

    <!-- Second frame, left side-->
    <ImageView
        android:id="@+id/land_left_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_land_left"/>

    <ImageView
        android:id="@+id/cloud_left_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_clouds_left"/>

    <!-- Third frame, right side-->
    <ImageView
        android:id="@+id/land_right_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_land_right"/>

    <ImageView
        android:id="@+id/cloud_right_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_clouds_right"/>
    <!-- End of animation layers-->

    <HorizontalScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontalScrollView"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardOne"
                android:onClick="animateMaps"
                android:transitionName="@string/transition_string"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="24dp"
                android:background="#000"
                android:clickable="true"
                android:padding="2dp"
                android:visibility="gone"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guide_reach_btn"
                android:text="@string/reach_us"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guide_about_btn"
                android:text="@string/about_us"/>

        </RelativeLayout>
    </HorizontalScrollView>

</RelativeLayout>
