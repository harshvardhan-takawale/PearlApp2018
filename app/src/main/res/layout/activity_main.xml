<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dota.pearl18.pearlapp2018.activities.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/display_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EVENTS" />

        <Button
            android:id="@+id/main_news_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEWS" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pro Shows" />

        <Button
            android:id="@+id/schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule" />

        <Button
            android:id="@+id/main_guide_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guide" />

        <Button
            android:id="@+id/credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Credits" />

        <Button
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact us" />

        <Button
            android:id="@+id/sponsors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sponsors" />

        <Button
            android:id="@+id/treasure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treasure Hunt" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register" />

        <Button
            android:id="@+id/qrscan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR Scanner" />
    </LinearLayout>
</FrameLayout>

